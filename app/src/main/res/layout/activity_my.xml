<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/realm_start_btn"
        android:visibility="gone"
        android:text="realmWriteStart"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_start_btn"
        android:visibility="gone"
        android:text="sqliteWriteStart"
        android:layout_below="@id/realm_start_btn"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/realm_read_start_btn"
        android:text="realmReadStart"
        android:layout_below="@id/sqlite_start_btn"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_read_start_btn"
        android:text="sqliteReadStart"
        android:layout_below="@id/realm_read_start_btn"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/realm_count_start_btn"
        android:text="realmCountStart"
        android:layout_below="@id/sqlite_read_start_btn"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_count_start_btn"
        android:text="sqliteCountStart"
        android:layout_below="@id/realm_count_start_btn"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
